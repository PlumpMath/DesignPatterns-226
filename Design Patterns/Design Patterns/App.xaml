<Application
    x:Class="Design_Patterns.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Design_Patterns"
    xmlns:Common="using:Design_Patterns.Common" 
    xmlns:localData="using:Design_Patterns.Data">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">Design Patterns</x:String>
            <!--<Common:ImagesToSingleConverter x:Key="SingleImage"/>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
